@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model  List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Fatura Detay</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active" style="color:black; font-size:20px;">

    </li>
</ol>
<table class="table table-hover" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>AÇIKLAMA</th>
        <th>MİKTAR</th>
        <th>BİRİM FİYAT</th>
        <th>TUTAR</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.FaturaKalemID</td>
            <td>@k.Aciklama</td>
            <td>@k.Miktar</td>
            <td>@k.BirimFiyat</td>
            <td>@k.Tutar</td>
        </tr>
    }
</table>
<br />
<a href="/Faturalar/YeniKalem" class="btn btn-info">Yeni FaturaKalem Girişi</a>

